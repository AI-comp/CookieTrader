<!doctype html>
<html role="application">
  <meta charset=utf-8>
  <title>Cookie Trader</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href='http://fonts.googleapis.com/css?family=Kavoon' rel='stylesheet' type='text/css'>
  <body>
    <div id="wrapper" class="l-h-flex">
      <header>
      <h1>Cookie Trader</h1>
      </header>
      <main class="l-flex-item l-v-flex">
      <div class="l-flex-item l-h-flex">
        <div id="info-block" class="l-flex-item">
          <p>Elapsed Time: <span id="elapsed-time">0</span> seconds.</p>
          <p><img src="/img/cookie-48.png">
          You have <span id="my-total-cookie">0</span> cookies.</p>
          <p><img src="/img/cookie-48.png">
          You bake <span id="my-cps">0.0</span> cookies per seconds.</p>
          <p><img src="/img/cookie-48.png">
          You bake <span id="my-cpc">10.0</span> cookies per types.</p>
        </div>
        <div id="type-block">
          <p>Typing: <span id="typing-text"></span>
        </div>
      </div>
      <div id="action-block">
        <div id="upgrade-column" class="column">
          <div class="upgrade-title">
            <span>Upgrade</span>
          </div>
          <div class="upgrades">
          </div>
        </div>
        <div id="bakery-column" class="column">
          <div class="bakery-title">
            <span>Global Store</span>
          </div>
          <div class="row row-title row-total-cookie">
            Total Cookies
          </div>
          <div class="row row-title row-cps">
            CPS
          </div>
          <div class="bakeries">
            <% var bakeryList = ['Cursor', 'Grandma', 'Farm', 'Factory', 'Mine', 'Shipment', 'AlchemyLab', 'Portal', 'TimeMachine', 'AntimatterCondenser']; %>
            <% for (var i=0, len=bakeryList.length; i<len; i++) { %>
              <% var bakery = bakeryList[i]; %>
              <div id="bakery-<%= bakery %>" class="bakery-item">
                <div class="amount">0</div>
                <div class="bakery-name"><%= bakery %></div>
                <div>
                  <img src="/img/cookie-24.png">
                  <span class="bakery-price"></span>
                </div>
              </div>
            <% } %>
          </div>
        </div>
        <div class="column">
          <div class="column-title">
            <span>Me</span>
          </div>
          <div class="row row-total-cookie">
          </div>
          <div class="row row-cps">
          </div>
          <div class="bakeries">
            <% for (var i=0, len=bakeryList.length; i<len; i++) { %>
              <% var b = bakeryList[i]; %>
              <div id="my-<%= b %>" class="row my-item">
                <div class="amount">0</div>
                <div class="bakery-sell">Sell 1</div>
              </div>
            <% } %>
          </div>
        </div>
        <% for (var idx=1; idx<4; idx++) { %>
          <div class="column">
            <div class="column-title">
              <span id="player<%= idx %>-name">Player1</span>
            </div>
            <div id="player<%= idx %>-total-cookie" class="row row-total-cookie">
              foo!
            </div>
            <div id="player<%= idx %>-cps" class="row row-cps">
              bar!
            </div>
            <div class="bakeries">
              <% for (var i=0, len=bakeryList.length; i<len; i++) { %>
                <% var bakery = bakeryList[i]; %>
                <div id="player<%= idx %>-<%= bakery %>" class="row player<%= idx %>-item">
                  <div class="amount">0</div>
                  <div class="bakery-sell">Sell 1</div>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
      </main>
      <footer>
      This application inspires to <a href="http://orteil.dashnet.org/cookieclicker/">Cookie Clicker</a>
      </footer>
    </div><!-- /wrapper -->
    <div id="cover">
      <div id="initial-form">
        <input id="player-name" type="text" placeholder="Username" /><br>
        <button id="participate-button" >Participate</button>
      </div>
    </div>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.string/2.3.3/underscore.string.min.js" type="text/javascript"></script>
    <script src="/socket.io/socket.io.js" type="text/javascript"></script>
    <script type="text/javascript">
    <!--
    var roomId = <%= roomId %>;
    // -->
    </script>
    <script src="/js/bakery.js" type="text/javascript"></script>
    <script src="/js/equip.js" type="text/javascript"></script>
    <script src="/js/player.js" type="text/javascript"></script>
    <script src="/js/client.js" type="text/javascript"></script>
